generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
}

model User {
  id        String   @id // ID dari Supabase Auth
  email     String   @unique
  role      UserRole @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model JenisPaket {
  id         Int      @id @default(autoincrement())
  nama_paket String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relasi ke Makanan
  makanan Makanan[]

  @@map("jenis_paket")
}

model Makanan {
  id             Int      @id @default(autoincrement())
  nama_makanan   String
  deskripsi      String
  foto           String
  harga          Int
  jenis_paket_id Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relasi ke JenisPaket
  jenisPaket JenisPaket @relation(fields: [jenis_paket_id], references: [id])

  @@map("makanan")
}
